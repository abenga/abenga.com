{{#*inline "page"}}

  <div class="container-fluid">
    <div class="row">
      <div class="col d-none d-md-block"></div>
      <div class="col col-md-10 col-lg-6 col-xl-4">
        <div class="card">
          <div class="card-body">
            <h1 class="card-title">{{ post.title }}</h1>
            <div class="row">
              <div class="col d-none d-md-block"></div>
              <div class="col col-md-10 col-lg-6 col-xl-4">
                <hr>
                <div class="post-abstract card-text">{{{post.abstract_html}}}</div>
                <hr>
              </div>
              <div class="col d-none d-md-block"></div>
            </div>

            <div class="card-text">{{{post.body_html}}}</div>
            {{!<a href="#" class="card-link">Card link</a>}}
            {{!<a href="#" class="card-link">Another link</a>}}
          </div>
        </div>
      </div>
      <div class="col d-none d-md-block"></div>
    </div>
  </div>

{{/inline}}
{{~> (parent)~}}
